<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.huihui.ultimatesample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ColorBarActivity"
            android:label="ColorBar" />
        <activity android:name=".TransparentBarActivity1"
            android:label="transparent"/>
        <activity android:name=".HintBarActivity1"
            android:label="hint"/>
        <activity android:name=".ImmersionBarActivity"
            android:label="immersion"/>
        <activity android:name=".HintBarActivity2"
            android:label="hint"/>
        <activity android:name=".TransparentBarActivity2"
            android:label="transparent"/>
        <activity android:name=".DrawerActivity"
            android:label="DrawerColorBar"/>

    </application>

</manifest>
